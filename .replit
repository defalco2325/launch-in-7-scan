hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"
packages = ["chromium", "glib", "nss", "nspr", "gtk3", "alsa-lib", "libdrm", "xorg.libX11", "xorg.libXcomposite", "xorg.libXdamage", "xorg.libXext", "xorg.libXfixes", "xorg.libXrandr", "xorg.libxcb", "mesa", "expat", "at-spi2-core", "cups", "libxkbcommon"]

[deployment]
deploymentTarget = "autoscale"
